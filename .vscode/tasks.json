    "version": "2.0.0",
    "tasks": [
        {
            "label": "develop",
            "type": "npm",
            "script": "develop",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "build"
        },
        {
            "label": "build",
            "type": "npm",
            "script": "build --prefix-paths",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "build"
        },
        {
            "label": "serve",
            "type": "npm",
            "script": "serve",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "ttube_client - build",
            "type": "npm",
            "script": "build",
            "runOptions": {},
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "build",
            "options": {
                "cwd": "./ttube_client"
            },
            "detail": "ttube_client>  npm run build"
        },
        {
            "label": "ttube_client dev",
            "type": "npm",
            "script": "dev",
            "path": "ttube_client/",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "build",
            "detail": "ttube_client>  npm run dev"
        }
    ]
}